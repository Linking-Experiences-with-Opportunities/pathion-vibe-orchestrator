# Stage 1: Builder
FROM node:20-alpine AS builder
WORKDIR /app

# Install build dependencies for native modules
RUN apk add --no-cache python3 make g++

# Copy only package configuration first to cache dependencies
COPY package.json yarn.lock ./
RUN yarn install --frozen-lockfile

# Copy the rest of the project files
COPY . .

# Accept build-time environment variables
ARG NODE_ENV
ARG MONGODB_URI
ARG MONGO_DB_CONTENT
ARG MONGO_DB_APP
ARG MONGO_DB_APP_DEV
ARG NEXTAUTH_SECRET
ARG NEXTAUTH_URL
ARG GOOGLE_CLIENT_ID
ARG GOOGLE_CLIENT_SECRET
ARG NEXT_PUBLIC_SUPABASE_URL
ARG NEXT_PUBLIC_SUPABASE_ANON_KEY
ARG NEXT_PUBLIC_BACKEND_API_URL
ARG BACKEND_API_URL_SERVER
ARG NEXT_PUBLIC_PYODIDE_URL
ARG NEXT_PUBLIC_FORCE_LOCAL
ARG NEXT_PUBLIC_FORCE_SERVER
ARG SUPABASE_JWT_SECRET
ARG SUPABASE_SERVICE_ROLE_KEY

# Set environment variables for the build process
ENV NODE_ENV=$NODE_ENV
ENV MONGODB_URI=$MONGODB_URI
ENV MONGO_DB_CONTENT=$MONGO_DB_CONTENT
ENV MONGO_DB_APP=$MONGO_DB_APP
ENV MONGO_DB_APP_DEV=$MONGO_DB_APP_DEV
ENV NEXTAUTH_SECRET=$NEXTAUTH_SECRET
ENV NEXTAUTH_URL=$NEXTAUTH_URL
ENV GOOGLE_CLIENT_ID=$GOOGLE_CLIENT_ID
ENV GOOGLE_CLIENT_SECRET=$GOOGLE_CLIENT_SECRET
ENV NEXT_PUBLIC_SUPABASE_URL=$NEXT_PUBLIC_SUPABASE_URL
ENV NEXT_PUBLIC_SUPABASE_ANON_KEY=$NEXT_PUBLIC_SUPABASE_ANON_KEY
ENV NEXT_PUBLIC_BACKEND_API_URL=$NEXT_PUBLIC_BACKEND_API_URL
ENV BACKEND_API_URL_SERVER=$BACKEND_API_URL_SERVER
ENV NEXT_PUBLIC_PYODIDE_URL=$NEXT_PUBLIC_PYODIDE_URL
ENV NEXT_PUBLIC_FORCE_LOCAL=$NEXT_PUBLIC_FORCE_LOCAL
ENV NEXT_PUBLIC_FORCE_SERVER=$NEXT_PUBLIC_FORCE_SERVER
ENV SUPABASE_JWT_SECRET=$SUPABASE_JWT_SECRET
ENV SUPABASE_SERVICE_ROLE_KEY=$SUPABASE_SERVICE_ROLE_KEY

# Build the project for production
RUN yarn build

# Stage 2: Runner
FROM node:20-alpine AS runner
WORKDIR /app

# needed to add runtime environment variables since we start a new container
ARG NODE_ENV
ARG MONGODB_URI
ARG MONGO_DB_CONTENT
ARG MONGO_DB_APP
ARG MONGO_DB_APP_DEV
ARG NEXTAUTH_SECRET
ARG NEXTAUTH_URL
ARG GOOGLE_CLIENT_ID
ARG GOOGLE_CLIENT_SECRET
ARG NEXT_PUBLIC_SUPABASE_URL
ARG NEXT_PUBLIC_SUPABASE_ANON_KEY
ARG NEXT_PUBLIC_BACKEND_API_URL
ARG BACKEND_API_URL_SERVER
ARG NEXT_PUBLIC_PYODIDE_URL
ARG NEXT_PUBLIC_FORCE_LOCAL
ARG NEXT_PUBLIC_FORCE_SERVER
ARG SUPABASE_JWT_SECRET
ARG SUPABASE_SERVICE_ROLE_KEY

# Set runtime environment variables
ENV NODE_ENV=$NODE_ENV
ENV MONGODB_URI=$MONGODB_URI
ENV MONGO_DB_CONTENT=$MONGO_DB_CONTENT
ENV MONGO_DB_APP=$MONGO_DB_APP
ENV MONGO_DB_APP_DEV=$MONGO_DB_APP_DEV
ENV NEXTAUTH_SECRET=$NEXTAUTH_SECRET
ENV NEXTAUTH_URL=$NEXTAUTH_URL
ENV GOOGLE_CLIENT_ID=$GOOGLE_CLIENT_ID
ENV GOOGLE_CLIENT_SECRET=$GOOGLE_CLIENT_SECRET
ENV NEXT_PUBLIC_SUPABASE_URL=$NEXT_PUBLIC_SUPABASE_URL
ENV NEXT_PUBLIC_SUPABASE_ANON_KEY=$NEXT_PUBLIC_SUPABASE_ANON_KEY
ENV NEXT_PUBLIC_BACKEND_API_URL=$NEXT_PUBLIC_BACKEND_API_URL
ENV BACKEND_API_URL_SERVER=$BACKEND_API_URL_SERVER
ENV NEXT_PUBLIC_PYODIDE_URL=$NEXT_PUBLIC_PYODIDE_URL
ENV NEXT_PUBLIC_FORCE_LOCAL=$NEXT_PUBLIC_FORCE_LOCAL
ENV NEXT_PUBLIC_FORCE_SERVER=$NEXT_PUBLIC_FORCE_SERVER
ENV SUPABASE_JWT_SECRET=$SUPABASE_JWT_SECRET
ENV SUPABASE_SERVICE_ROLE_KEY=$SUPABASE_SERVICE_ROLE_KEY

# Copy only necessary build artifacts and runtime dependencies from builder
COPY --from=builder /app/.next ./.next
COPY --from=builder /app/package.json .
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/next.config.js ./
COPY --from=builder /app/public ./public
COPY --from=builder /app/scripts ./scripts
COPY --from=builder /app/.env.* ./
# If you have additional configuration (e.g., a config.ts or tailwind.config.js that affects runtime),
# and they are needed by the running app, copy them here as well.

EXPOSE 7777

# Run the production server
CMD ["yarn", "start", "-p", "7777"]