# (NEXT_PUBLIC) Production backend API base URL.
NEXT_PUBLIC_BACKEND_API_URL="https://PROD_BACKEND_API_URL.example.com"

# (NEXT_PUBLIC) Cloudflare Python Worker runner base URL (production).
NEXT_PUBLIC_CF_RUNNER_URL="https://cf-runner-production.linkedinorleftout.workers.dev"

# (NEXT_PUBLIC) Supabase config for production (if same as staging/dev, keep same).
NEXT_PUBLIC_SUPABASE_URL="https://YOUR_PROJECT.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="SUPABASE_ANON_KEY_PLACEHOLDER"

# (NEXT_PUBLIC) Pyodide
NEXT_PUBLIC_PYODIDE_URL="https://cdn.example.com/pyodide/full/"

# Feature flags
NEXT_PUBLIC_FORCE_LOCAL="false"
NEXT_PUBLIC_FORCE_SERVER="false"
NEXT_PUBLIC_SHOW_RUNNER_PANEL="false"
NEXT_PUBLIC_ENABLE_DEBUG_RUNNER="false"

# Airtable
AIRTABLE_BASE_ID="appXXXXXXXXXXXXXX"
AIRTABLE_TABLE_NAME="YOUR_WAITLIST_TABLE"
AIRTABLE_WAITLIST="YOUR_WAITLIST_TABLE"          # alias if referenced in code
AIRTABLE_FEATURES="YOUR_FEATURE_REQUESTS_TABLE"
AIRTABLE_BUGS="YOUR_BUG_REPORTS_TABLE"
AIRTABLE_TOKEN="AIRTABLE_TOKEN_PLACEHOLDER"      # SECRET

# HubSpot (SECRET)
HUBSPOT_ACCESS_TOKEN="HUBSPOT_ACCESS_TOKEN_PLACEHOLDER"

# Optional email integration (if prod uses it)
NOTIFICATION_EMAIL="notifications@example.com"
EMAIL_USER="EMAIL_USER_PLACEHOLDER"              # SECRET
EMAIL_PASS="EMAIL_PASS_PLACEHOLDER"              # SECRET
